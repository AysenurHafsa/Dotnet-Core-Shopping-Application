@model ProductListModel
@*@{ ViewData["Title"] = "Magic Shopping"; }

    <div class="text-center">*@

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoryList")     @*component kısmı ekledik ?*@
    </div>
    <div class="col-md-9">

        <div class="row">
            @foreach (var product in Model.Products)
            {
                <partial name="_product" for="@product" />
                }
        </div>
        <div page-model="@Model.PageInfo"></div>
    </div>
</div>
@*</div>*@