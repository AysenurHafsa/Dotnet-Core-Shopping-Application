@model CategoryListModel
@{
    ViewData["Title"] = "CategoryList";
}

<h1>Admin Categories</h1>
<hr />


@if (Model.Categories.Count() > 0)@*direk tabloyu yazmak yerine  modelin icinde products var mı diye kontrol eden if yapısı *@
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <td style="width:30px;">Id</td>
                <td style="width:100px;">Name</td>
                <td style="width:150px;"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)@*Model icerisinden gelen bilgilerle dolduruluyor*@
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-primary btn-sm mr-2" href="/admin/products/@item.Id">Edit</a>
                        <form action="/admin/deleteproduct" method="post" style="display:inline;">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
        <tr>
            <td></td>
        </tr>
    </table>
}
else
{
    <div class="alert alert-warning">
        @*uyarı*@
        <h4>No Products</h4>
    </div>
}