@model ProductModel
@{
    ViewData["Title"] = "EditProduct";
}

<h1>Edit Product</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        @*Product taki alanlarla alakalı kısımları doldurduk ve  bu kısım admincontrol daki producta gidiyor.*@

        <form asp-controller="Admin" asp-action="Edit" method="post">  @*Action yazmak yerine TagHelper'ları kullandık.*@

            <input type="hidden" name="Id" value="@Model.Id" />  @*urun Id bilgisini aldık*@
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" value="@Model.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="Description" class="form-control">
                       @Model.Description
                    </textarea>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Price" value="@Model.Price" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>


        </form>
    </div>
</div>